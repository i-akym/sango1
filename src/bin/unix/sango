if [ "$SANGO_JAVA_BIN" != "" ]; then
  JAVA=${SANGO_JAVA_BIN%/}/java
else
  JAVA=java
fi
ARGS=$*
while [ "$1" != "" ]; do
  if [ "$ACT" = "skip" ]; then
    ACT=
  elif [ "$ACT" = "m-opt" ]; then
    ULIB=$1
    ACT=
  elif [ "$1" = "-modules" ]; then
    ACT="m-opt"
  elif [ "$1" = "-m" ]; then
    ACT="m-opt"
  elif [ "$1" = "-verbose" ]; then
    ACT="skip"
  elif [ "$1" = "-quiet" ]; then
    ACT="skip"
  fi
  shift
done
SLIB=LLIIBB
JLIB=$ULIB:$SLIB
java -cp $JLIB org.sango_lang.RuntimeEngine -L $SLIB $ARGS
