module @beta "sango.util.eq.feature" ;;

### feature functions

eval <*T[ a'eq ]> *X0 <T> *X1 eq? @public -> <bool> {
  X0 X1 (X0 _feature_a'eq) eqcmp_eq?
} ;;

eval <*T[ a'eq ]> *X0 <T> *X1 ne? @public -> <bool> {
  X0 X1 (X0 _feature_a'eq) eqcmp_ne?
} ;;

eval <*T[ a'eq ]> *X0 hash @public -> <int> {
  X0 &(X0 _feature_a'eq >> hash_f)
} ;;


### incarnation

data <*T eq_inc> @protected :=
  org: <T>
  fo: <T eq_fs>
  eq_inc$ ;;

eval <*T[ a'eq ]> *FEq incarnate @public -> <T eq_inc> {
  org: FEq
  fo: (FEq _feature_a'eq)
  eq_inc$
} ;;
