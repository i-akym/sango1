module "sango.util.bag.simplebag" ;;

import "sango.list" -> list ;;
import "sango.tuple" -> tuple ;;
import "sango.util.bag" -> bag ;;
import "sango.util.iter" -> iter ;;

data <*A d> :=
  eq_fs: <A eq_fs>
  col: <A list>
  d$ ;;

eval new_bag @public -> <*A bag.bag> {
  hard_eq_fs new_bag
} ;;

eval <*A eq_fs> *Eq new_bag_eq | new_bag @public -> <A bag.bag> {
  (Eq [] d$) bag_fs bag.to_generic_bag
} ;;

eval bag_fs -> <<*A d> A bag.bag_fs> {
  empty?_f: ^empty?
  size_f: ^size
  contain?_f: ^contain?
  get_all_f: ^get_all
  add_f: ^add
  remove_f: ^remove
  remove_all_f: ^remove_all
  delete_f_: (^delete value$)
  delete_all_f_: (^delete_all value$)
  take_f: ^take
  clear_f: ^clear
  bag.bag_fs$
} ;;

eval <*A d> *Bag_d empty? -> <bool> {
  Bag_d = col: *Col *** d$,
  Col list.empty?
} ;;

eval <*A d> *Bag_d size -> <int> {
  Bag_d = col: *Col *** d$,
  Col list.length
} ;;

eval <*A d> *Bag_d <A> *Elem contain? -> <bool> {
  Bag_d = *Eq *Col d$,
  Col &\ <A list> *Xs -> <bool> {
    Xs case {
    ; [ *H ; *T ] || H Elem Eq eq? -> true$
    ; [ ** ; *T ] -> T &&
    ; [] -> false$
    }
  }
} ;;

eval <*A d> *Bag_d <A> *Elem get_all -> <A list> {
  Bag_d = *Eq *Col d$,
  Col [] &\ <A list> *Xs <A list> *Found -> <A list> {
    Xs case {
    ; [ *H ; *T ] || H Elem Eq eq? -> T [ H ; Found] &&
    ; [ ** ; *T ] -> T Found &&
    ; [] -> Found
    }
  }
} ;;

eval <*A d> *Bag_d <A> *Elem add -> <A d> {
  Bag_d = col: *Col *** d$,
  col: [ Elem ; Col] :: Bag_d d$

} ;;

eval <*A d> *Bag_d <A> *Elem remove -> <<A d> <A maybe> tuple> {
  Bag_d = *Eq *Col d$,
  Col [] &\ <A list> *Xs <A list> *Nes -> <<A d> <A maybe> tuple> {
    Xs case {
    ; [ *H ; *T ] || H Elem Eq eq? -> (| col: (T Nes list.append) :: Bag_d d$, H value$ |)
    ; [ *H ; *T ] -> T [ H ; Nes ] &&
    ; [] -> (| col: Nes :: Bag_d d$, none$ |)
    }
  }
} ;;

eval <*A d> *Bag_d <A> *Elem remove_all -> <<A d> <A list> tuple> {
  Bag_d = *Eq *Col d$,
  Col [] [] &\ <A list> *Xs <A list> *Nes <A list> *Removed -> <<A d> <A list> tuple> {
    Xs case {
    ; [ *H ; *T ] || H Elem Eq eq? -> T Nes [ H ; Removed] &&
    ; [ *H ; *T ] -> T [ H ; Nes ] Removed &&
    ; [] -> (| col: Nes :: Bag_d d$, Removed |)
    }
  }
} ;;

eval <*A d> *Bag_d <A> *Elem delete -> <A d> {
  Bag_d Elem remove >> tuple.pair_first
} ;;

eval <*A d> *Bag_d <A> *Elem delete_all -> <A d> {
  Bag_d Elem remove_all >> tuple.pair_first
} ;;

eval <*A d> *Bag_d take -> <<A <A d> tuple> maybe> {
  Bag_d = col: *Col *** d$,
  Col case {
  ; [ *E ; *Col' ] -> (| E, col: Col' :: Bag_d d$ |) value$
  ; [] -> none$
  }
} ;;

eval <*A d> *Bag_d clear -> <A d> {
  col: [] :: Bag_d d$
} ;;

