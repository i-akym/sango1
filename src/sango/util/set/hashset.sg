module "sango.util.set.hashset" ;;

import "sango.util.avltree.map" -> avlmap ;;
import "sango.util.map" -> map ;;
import "sango.util.set" -> set ;;
import "sango.util.set.simpleset" -> sset ;;

data <*A d> :=
  eq_fs: <A eq_fs>
  col: <int <A set.set> map.map>
  count: <int>
  d$ ;;

eval new_set @public -> <*A set.set> {
  hard_eq_fs new_set
} ;;

eval <*A eq_fs> *Eq new_set_eq | new_set @public -> <A set.set> {
  (Eq (int_ord_fs avlmap.new_map) 0 d$) set_fs set.combine
} ;;

eval set_fs -> <<*A d> A set.set_fs> {
  empty?_f: ^empty?
  size_f: ^size
  get_f: ^get
  contain?_f_: (^contain? value$)
  put_f: ^put
  put_new_f_: (^put_new value$)
  add_f_: (^add value$)
  remove_f: ^remove
  delete_f_: (^delete value$)
  take_f: ^take
  clear_f: ^clear
  set.set_fs$
} ;;

eval <*A d> *Set_d empty? -> <bool> {
  Set_d = *Eq *Col *Count d$,
  Count zero?
} ;;

eval <*A d> *Set_d size -> <int> {
  Set_d = *Eq *Col *Count d$,
  Count
} ;;

eval <*A d> *Set_d <A> *Elem get -> <A maybe> {
  Set_d = *Eq *Col *Count d$,
  Col (Elem &(Eq hash_f)) map.assoc >> case {
  ; *S value$ -> S Elem set.get
  ; ** -> none$
  }
} ;;

eval <*A d> *Set_d <A> *Elem contain? -> <bool> {
  Set_d Elem get >> something?
} ;;

eval <*A d> *Set_d <A> *Elem put -> <<A d> <A maybe> tuple> {
  Set_d = *Eq *Col *Count d$,
  Elem &(Eq hash_f) = *H,
  Col H map.assoc >> case {
  ; *S value$ ->
    S Elem set.put >> case {
    ; (| *S', none$ |) -> (| Col H S' map.add, Count inc, none$ |)
    ; (| *S', *R |) -> (| Col H S' map.add, Count, R |)
    } = (| *Col', *Count', *Replaced_ |),
    (| col: Col' count: Count' :: Set_d d$, Replaced_ |)
  ; ** ->
    Eq sset.new_set = *S,
    S Elem set.add = *S',
    Col H S' map.add = *Col',
    Count inc = *Count',
    (| col: Col' count: Count' :: Set_d d$, none$ |)
  }
} ;;

eval <*A d> *Set_d <A> *Elem put_new -> <<A d> bool tuple> {
  Set_d Elem contain? >> case {
  ; true$ -> (| Set_d, false$ |)
  ; ** -> (| Set_d Elem add, true$ |)
  }
} ;;

eval <*A d> *Set_d <A> *Elem add -> <A d> {
  Set_d Elem put = (| *Set_d', ** |),
  Set_d'
} ;;

eval <*A d> *Set_d <A> *Elem remove -> <<A d> <A maybe> tuple> {
  Set_d = *Eq *Col *Count d$,
  Elem &(Eq hash_f) = *H,
  Col H map.assoc >> case {
  ; *S value$ ->
    S Elem set.remove >> case {
    ; (| **, none$ |) -> (| Col, Count, none$ |)
    ; (| *S', *R |) || S' set.empty? -> (| Col H map.delete, Count dec, R |)
    ; (| *S', *R |) -> (| Col H S' map.add, Count dec, R |)
    } = (| *Col', *Count', *Removed_ |),
    (| col: Col' count: Count' :: Set_d d$, Removed_ |)
  ; ** -> (| Set_d, none$ |)
  }
} ;;

eval <*A d> *Set_d <A> *Elem delete -> <A d> {
  Set_d Elem remove = (| *Set_d', ** |),
  Set_d'
} ;;

eval <*A d> *Set_d take -> <<A <A d> tuple> maybe> {
  Set_d = *Eq *Col *Count d$,
  Col map.take >> case {
  ; (| (| *H, *S |), *Col' |) value$ ->
    S set.take = (| *E, *S' |) value$,
    Count dec = *Count',
    S' set.empty? >> case {
    ; true$ ->
      (| E, col: Col' count: Count' :: Set_d d$ |) value$
    ; ** ->
      Col' H S' map.add = *Col'',
      (| E, col: Col'' count: Count' :: Set_d d$ |) value$
    }
  ; ** -> none$
  }
} ;;

eval <*A d> *Set_d clear -> <A d> {
  Set_d = *Eq *Col *Count d$,
  col: (Col map.clear) count: 0 :: Set_d d$
} ;;

