module "sango.util.set.simpleset" ;;

import "sango.list" -> list ;;
import "sango.util.iter" -> iter ;;
import "sango.util.set" -> set ;;

data <*A d> :=
  eq_fs: <A eq_fs>
  col: <A list>
  d$ ;;

eval new_set @public -> <*A set.set> {
  hard_eq_fs new_set
} ;;

eval <*A eq_fs> *Eq new_set_eq | new_set @public -> <A set.set> {
  (Eq [] d$) set_fs set.combine
} ;;

eval set_fs -> <<*A d> A set.set_fs> {
  empty?_f: ^empty?
  size_f: ^size
  get_f: ^get
  contain?_f_: (^contain? value$)
  put_f: ^put
  put_new_f_: (^put_new value$)
  add_f_: (^add value$)
  remove_f: ^remove
  delete_f_: (^delete value$)
  take_f: ^take
  clear_f: ^clear
  set.set_fs$
} ;;

eval <*A d> *Set_d empty? -> <bool> {
  Set_d = *Eq *Col d$,
  Col list.empty?
} ;;

eval <*A d> *Set_d size -> <int> {
  Set_d = *Eq *Col d$,
  Col list.length
} ;;

eval <*A d> *Set_d <A> *Elem get -> <A maybe> {
  Set_d = *Eq *Col d$,
  Col &\ <A list> *Xs -> <A maybe> {
    Xs case {
    ; [ *H ; *T ] || H Elem Eq eq? -> H value$
    ; [ ** ; *T ] -> T &&
    ; [] -> none$
    }
  }
} ;;

eval <*A d> *Set_d <A> *Elem contain? -> <bool> {
  Set_d Elem get >> something?
} ;;

eval <*A d> *Set_d <A> *Elem put -> <<A d> <A maybe> tuple> {
  Set_d = *Eq *Col d$,
  Col [] &\ <A list> *Xs <A list> *Nes -> <<A d> <A maybe> tuple> {
    Xs case {
    ; [ *H ; *T ] || H Elem Eq eq? ->
      (| col: ([ Elem ; T ] Nes list.append) :: Set_d d$,
         H value$ |)
    ; [ *H ; *T ] -> T [ H ; Nes ] &&
    ; [] ->
      (| col: [ Elem ; Nes ] :: Set_d d$,
         none$ |)
    }
  }
} ;;

eval <*A d> *Set_d <A> *Elem put_new -> <<A d> bool tuple> {
  Set_d Elem contain? >> case {
  ; true$ -> (| Set_d, false$ |)
  ; ** -> (| Set_d Elem add, true$ |)
  }
} ;;

eval <*A d> *Set_d <A> *Elem add -> <A d> {
  Set_d Elem put = (| *Set_d', ** |),
  Set_d'
} ;;

eval <*A d> *Set_d <A> *Elem remove -> <<A d> <A maybe> tuple> {
  Set_d = *Eq *Col d$,
  Col [] &\ <A list> *Xs <A list> *Nes -> <<A d> <A maybe> tuple> {
    Xs case {
    ; [ *H ; *T ] || H Elem Eq eq? ->
      (| col: (T Nes list.append) :: Set_d d$,
         H value$ |)
    ; [ *H ; *T ] -> T [ H ; Nes ] &&
    ; [] ->
      (| col: Nes :: Set_d d$,
         none$ |)
    }
  }
} ;;

eval <*A d> *Set_d <A> *Elem delete -> <A d> {
  Set_d Elem remove = (| *Set_d', ** |),
  Set_d'
} ;;

eval <*A d> *Set_d take -> <<A <A d> tuple> maybe> {
  Set_d = *Eq *Col d$,
  Col case {
  ; [ *E ; *Col' ] -> (| E, col: Col' :: Set_d d$ |) value$
  ; [] -> none$
  }
} ;;

eval <*A d> *Set_d clear -> <A d> {
  col: [] :: Set_d d$
} ;;

